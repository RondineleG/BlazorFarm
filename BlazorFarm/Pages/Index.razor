@page "/"
@using BlazorFarm.Data

<h1>
    <i class="oi oi-home" aria-hidden="true"></i>
       <h3>BlazorFarm => Animals</h3>
</h1>

<div class="container-fluid">
    <div class="row equal">
        @foreach (var animal in Animals.All)
         {
              <Animal
                  Name="@animal.Name"
                  ImageUrl="@animal.ImageUrl"
                  WavUrl="@animal.WavUrl">
                  @animal.Description
              </Animal>
          }
        </div>
</div>